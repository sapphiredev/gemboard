generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Message {
    snowflake             BigInt                  @id
    UserMessage           UserMessage[]
    StarboardBoardMessage StarboardBoardMessage[]
}

model User {
    snowflake   BigInt        @id
    UserMessage UserMessage[]
}

model UserMessage {
    user      User    @relation(fields: [userId], references: [snowflake], onDelete: Cascade)
    userId    BigInt
    message   Message @relation(fields: [messageId], references: [snowflake], onDelete: Cascade)
    messageId BigInt

    @@id([userId, messageId])
}

model StarboardBoardMessage {
    snowflake BigInt
    channelId BigInt
    guildId   BigInt
    message   Message @relation(fields: [messageId], references: [snowflake], onDelete: Cascade)
    messageId BigInt

    @@id([snowflake, channelId, guildId, messageId])
}
